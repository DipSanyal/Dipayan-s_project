@using Dipayan_project.Models
@model Dipayan_project.Models.Product
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">

    <title>DeleteRecord</title>
</head>
<body>
    <div class="form-group">
        @using (Html.BeginForm("delete", "Product", FormMethod.Post))
        {

            <table>
                <tr>
                    <td>
                        <b>@Html.LabelFor(m => m.ProductId, new { @class = "input-label" })</b>
                    </td>
                    <td></td>
                    <td>
                        @Html.TextBoxFor(m => m.ProductId)
                    </td>
                </tr>
                <tr>
                    <td>
                       <b> @Html.LabelFor(m => m.ProductName, new { @class = "input-label" })</b>
                    </td>
                    <td></td>
                    <td>
                        @Html.TextBoxFor(m => m.ProductName)
                    </td>

                </tr>
                <tr></tr>
                <tr>
                    <td>
                        <input type="submit" value="DELETE" class="btn btn-primary" />
                    </td>
                </tr>
            </table>

        }
    </div>
</body>
</html>
