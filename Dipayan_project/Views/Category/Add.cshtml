@using Dipayan_project.Models
@model Dipayan_project.Models.Category
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">

    <title>AddData</title>
</head>
<body>
    <div class="form-group">
        @using (Html.BeginForm("Save", "Category", FormMethod.Post))
        {
             @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <table>
                <tr>
                    <td>
                        <b>@Html.LabelFor(m => m.CategoryName, new { @class = "input-label" })</b>
                    </td>
                    <td></td>
                    <td></td>
                    <td>
                        @Html.EditorFor(m => m.CategoryName, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.CategoryName, "*Required", new { @class = "text-danger" })
                    </td>
                </tr>
                <tr></tr>
                <tr></tr>
                <tr>

                    <td>
                        <input type="submit" value="SAVE" class="btn btn-primary" />
                    </td>
                    <td></td>
                    <td>

                    </td>
                    <td>
                        
                        @Html.ActionLink("Add Product","Add","Product")
                    </td>
                </tr>
                <tr></tr>
                <tr></tr>
           </table>
        }
    </div>
</body>
</html>
